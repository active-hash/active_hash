source 'http://rubygems.org/'

gem 'activerecord', '~> 3.1.0'
gem 'rspec', '~> 3.5.0'
gem 'wwtd'
gem 'rake', '~> 10.0'
gem 'i18n', '~> 0.6.11'
gem 'test-unit'

if RUBY_VERSION < "2"
  gem 'json', '< 2.0.0'
else
  gem 'json'
end

platform :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.6'
end

platform :ruby do
  gem 'sqlite3'
end

platforms :rbx do
  gem 'racc'
  gem 'rubysl', '~> 2.0'
  gem 'psych'
end

gemspec :path => '../'
